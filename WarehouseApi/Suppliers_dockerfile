FROM mcr.microsoft.com/dotnet/aspnet:5.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:5.0 AS publish
WORKDIR /src
COPY ./Suppliers_API/ /src/Suppliers_API/
COPY ./BLL/ /src/BLL/
COPY ./DAL/ /src/DAL/
WORKDIR /src/Suppliers_API
RUN dotnet restore
RUN dotnet publish "Suppliers_API.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Suppliers_API.dll"]
EXPOSE 80