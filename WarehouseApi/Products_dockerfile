FROM mcr.microsoft.com/dotnet/aspnet:5.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:5.0 AS publish
WORKDIR /src
COPY ./Products_API/ /src/Products_API/
COPY ./BLL/ /src/BLL/
COPY ./DAL/ /src/DAL/
WORKDIR /src/Products_API
RUN dotnet restore
RUN dotnet publish "Products_API.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Products_API.dll"]
EXPOSE 80